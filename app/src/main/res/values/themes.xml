<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Week4task" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#C9082A</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">#E5E5E5</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="cardProperties">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="dark_card_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="recycle_card_styles">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="color">@color/white_card</item>
        <item name="android:radius">20dp</item>
    </style>
</resources>